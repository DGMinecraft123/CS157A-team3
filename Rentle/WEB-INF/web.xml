  <servlet-mapping>
    <servlet-name>ChatStore</servlet-name>
    <url-pattern>/chatstore</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ReloadData</servlet-name>
    <url-pattern>/reloaddata</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Group</servlet-name>
    <url-pattern>/group</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ReloadDataGroup</servlet-name>
    <url-pattern>/reloaddatagroup</url-pattern>
  </servlet-mapping>

    <servlet-mapping>
