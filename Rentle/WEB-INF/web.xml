  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ReloadFriends</servlet-name>
    <url-pattern>/reloadfriends</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
</web-app>
